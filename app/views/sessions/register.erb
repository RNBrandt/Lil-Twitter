<h1>Create A New User Account</h1>

<form id="new_user" action="/users" method="POST">
  <label for="the_first_name">First Name:<br>
    <input type="text" name="first_name" placeholder="First Name">
  </label><br>
  <br>
  <label for="the_last_name">Last Name:<br>
    <input type="text" name="last_name" placeholder="Last Name">
  </label><br>
  <br>
  <label for="the_email">Email:<br>
    <input type="email" name="email" placeholder="Email">
  </label><br>
  <br>
  <label for="the_password">Password:<br>
    <input type="password" name="password" placeholder="Password">
  </label><br>
  <br>
  <label for="the_handle">Handle:<br>
    <input type="text" name="handle" placeholder="handle">
  </label><br>
  <br>
  <label for="the_bio">Bio:<br>
    <textarea name="bio" rows="4" cols="50"></textarea>
  </label><br>
  <br>
  <input type="submit" value="Create New User!!">
</form>
